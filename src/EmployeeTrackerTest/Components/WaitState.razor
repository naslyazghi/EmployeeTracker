<div class="wait-state-background">
    <div class="alert alert-info wait-state">
        <h5>@WaitTitle</h5>
        <div>@WaitMessage</div>
        <div class="spinner">
            <div class="spinnerDivs">
                <div class="rect2"></div>
                <div class="rect3"></div>
                <div class="rect4"></div>
                <div class="rect5"></div>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string WaitTitle { get; set; }

    [Parameter]
    public string WaitMessage { get; set; }

    [Parameter]
    public bool Show { get; set; }
}