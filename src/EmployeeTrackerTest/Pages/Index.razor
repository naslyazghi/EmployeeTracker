@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<div class="alert alert-info mt-4" role="alert">
    <p>For CSS use Bootstrap</p>
    <a href="https://getbootstrap.com/docs/5.1/getting-started/introduction/">https://getbootstrap.com/docs/5.1/getting-started/introduction/</a>

</div>

<div class="alert alert-info mt-4" role="alert">
    <p>For Toast use Blazored Toast</p>
    <a href="https://github.com/Blazored/Toast">https://github.com/Blazored/Toast</a>

    See an Example &nbsp; <input id="btnShowWait" type="button" class="btn btn-primary" value="Show" @onclick="ShowToast" />

</div>

<div class="alert alert-info mt-4" role="alert">
    <p>For Validation please use FluentValidation</p>
    <a href="https://docs.fluentvalidation.net/en/latest/installation.html">https://docs.fluentvalidation.net/en/latest/installation.html</a>

</div>

<div class="alert alert-info mt-4" role="alert">
    <p>For Local Storage please use Blazored LocalStorage</p>
    <a href="https://github.com/Blazored/LocalStorage">https://github.com/Blazored/LocalStorage</a>

</div>

@if (ShowWait)
{
    <WaitState WaitTitle="@WaitTitle" WaitMessage="@WaitMessage"></WaitState>
}

<div class="alert alert-info mt-4" role="alert">
    See an example of the standard Wait Dialog &nbsp;<input id="btnShowWait" type="button" class="btn btn-primary" value="Show" @onclick="ShowWaitDialog" />
</div>


<Confirm @ref="Confirmation" ConfirmationChanged="ConfirmCancel_Click" ConfirmationTitle="@ConfirmationTitle" ConfirmationMessage="@ConfirmationMessage"></Confirm>


<div class="alert alert-info mt-4" role="alert">
    See an example of the standard Confirm Dialog &nbsp;<input id="btnShowConfirm" type="button" class="btn btn-primary" value="Show" @onclick="ShowConfirmDialog" />
</div>



<ConfirmDelete @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"></ConfirmDelete>


<div class="alert alert-info mt-4" role="alert">
    See an example of the standard Confirm Delete Dialog &nbsp;<input id="btnShowConfirmDelete" type="button" class="btn btn-primary" value="Show" @onclick="ShowDeleteDialog" />
</div>